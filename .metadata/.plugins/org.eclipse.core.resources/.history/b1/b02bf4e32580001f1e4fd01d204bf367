package controller;

import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;

@SuppressWarnings("serial")
@WebServlet("/register")
public class Register extends HttpServlet {

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		try {
			Class.forName("org.postgresql.Driver");
			Connection con = DriverManager
					.getConnection("jdbc:postgresql://localhost:5432/shopkeeper?user=postgres&password=root");

			String name = req.getParameter("nm");
			String email = req.getParameter("em");
			int phoneNumber = Integer.parseInt(req.getParameter("ph"));
			String password = req.getParameter("ps");
			String confirmPassword = req.getParameter("cps");

			if (password.equals(confirmPassword)) {

				PreparedStatement ps = con.prepareStatement("insert into user values(?, ?, ?, ?)");
				ps.setString(1, name);
				ps.setString(2, email);
				ps.setInt(3, phoneNumber);
				ps.setString(4, password);

				int rowsAffected = ps.executeUpdate();

				if (rowsAffected > 0) {
					resp.sendRedirect("login.jsp");
				} else {
					resp.sendRedirect("register.jsp?error=Registration failed");
				}

			} else {
				resp.sendRedirect("register.jsp?error=Passwords do not match");
			}

		} catch (ClassNotFoundException | SQLException e) {
			e.printStackTrace();
		} finally {
			con.close();
		}
	}
}
